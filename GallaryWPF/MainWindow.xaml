<Window x:Class="GallaryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GallaryWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1000">
    <Window.Resources>
        <Style TargetType="ListBox" x:Key="Large" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border CornerRadius="5" Background="{TemplateBinding ListBox.Background}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                                <WrapPanel  Width="1000" Orientation="Horizontal"
                  
                       IsItemsHost="True"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBox" x:Key="List" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border CornerRadius="5" Background="{TemplateBinding ListBox.Background}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <WrapPanel HorizontalAlignment="Left"  Width="100" Orientation="Vertical"
                             
                       IsItemsHost="True"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

   <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="19*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top" FontSize="14" Background="White">
                <MenuItem Header="File" >
                    <MenuItem Header="New"    />
                    <MenuItem Header="Open" Click="Open_Click"   />
                    <MenuItem Header="Save"   />
                    <MenuItem Header="Save as"/>
                    <MenuItem Header="Exit"   />
          
                </MenuItem>
                <MenuItem Header="Edit" >
                    <MenuItem Header="Add file"    />
                    <MenuItem Header="Add folder" />
                  
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header=" Tiles"      />
                    <MenuItem Header="Extra large icons"      />
                    <MenuItem Header="Small icons"  />
                    <MenuItem Header="List" Name="Listvievform"  Click="Listvievform_Click" />
                    <MenuItem Header="Details"     />
                </MenuItem>
                <MenuItem Header="About">
                   
                </MenuItem>
               
            </Menu>
        </DockPanel>
        <Frame Grid.Row="1"   Name="ikinci" ></Frame>
        <ListBox Grid.Row="1" Name="qallery" Style="{StaticResource Large}">
            <ItemsControl  Name="galeryicindekiler" ItemsSource="{Binding images}" >


                <ItemsControl.ItemsPanel >
                    <ItemsPanelTemplate >
                        <WrapPanel Name="wrap" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>

                    <DataTemplate>

                        <Button Width="60" Height="60" Name="Image" Click="Image_Click" Tag="{Binding source }">
                            
                            <StackPanel>
                              
                                <Image  Source="{Binding image}"></Image>
                                <Label Content="{Binding source }" ></Label>
            
                            </StackPanel>
                   
                       

                        </Button>
                       
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ListBox>
    </Grid>
</Window>
